<div class="index">
	<% if(haveList && projectList.length > 0) {%>
		<div style="height:60px;line-height:60px;font-size:25px;">项目列表</div>
		<ul class="searchlist">
			<% projectList.forEach(function(item, index) { %>
				<li>
					<div class="item">
						<p><%= item.name %></p>
						<a href="/getjson/<%=item.url%>" target="_blank" class="view act">查看详情</a>
					</div>
				</li>
			<% }) %>
		</ul>
	<% } else { %>
		<p>没有啥项目，点击右上角创建一个新项目吧~</p>
	<% } %>
</div>
<script>
	$(".delete").on('click',function(e){
		var _id = $(e.currentTarget).data("id");
		if(confirm("确定删除吗？")){
			$.ajax({
				url:'/delete',
				type:'post',
				data:{
					url:_id
				},
				success:function(data){
					if(data.code === 0) location.reload()
				},
				error:function(){
					alert("出错了")
				}
			})
		}

	})
</script>
